doctype html
html(lang='en')
  head
    title New password - PicoBudget - Expense tracking tool
    include includes/head.jade
  body
    include includes/nav.jade
    .container
      section#content
        - if (flash.error !== undefined)
          .alert-danger.alert#fail
            strong Oh no..
            br
            p #{flash.error}
        .row
          .span10
            h1 Enter new password
            p Please provide a new password for your account.
            form.form-horizontal(id='loginform', method='POST', action='/savePassword', onsubmit="return PBHelperTools.validateNewPassword();")
              fieldset
                .control-group#cg-code
                  .controls
                    input.input-xlarge#codeInput(type='hidden', name='codeInput', value='#{locals.code}')
                .control-group#cg-password
                  label.control-label(for='passwordInput') Password
                  .controls
                    input.input-xlarge#passwordInput(type='password', name='passwordInput')
                .control-group#cg-confirmpassword
                  label.control-label(for='confirmPasswordInput') Confirm password
                  .controls
                    input.input-xlarge#confirmPasswordInput(type='password', name='confirmPasswordInput')
                .control-group
                .form-actions
                  button.btn.btn-info(type='submit') Save new password


      include includes/footer.jade

    include includes/libs.jade