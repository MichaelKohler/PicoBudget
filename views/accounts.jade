  body
    header
      nav
        .navbar.navbar-fixed-top
          .navbar-inner
            .container
              a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.brand(href='http://localhost:1337') PicoBudget
              .nav-collapse
                ul.nav
                  li.active
                    a(href='http://localhost:1337/dashboard') Home
                  li
                    a(href='http://localhost:1337/faq') FAQ
                  li
                    a(href='http://localhost:1337/about') About
                  li
                    a(href='http://localhost:1337/logout') Logout
    .container
      section#content
        .row
          .span2
            .well(style='padding: 8px 0;')
              ul.nav.nav-list
                li.nav-header Money Management
                li
                  a(href='http://localhost:1337/dashboard')
                    i.icon-home
                    span Dashboard
                li
                  a(href='http://localhost:1337/accounts')
                    i.icon-align-left
                    span Accounts
                li
                  a(href='http://localhost:1337/transactions')
                    i.icon-pencil
                    span Transactions
                li
                  a(href='http://localhost:1337/budget')
                    i.icon-signal
                    span Budget
                li
                  a(href='http://localhost:1337/reports')
                    i.icon-file
                    span Reports
                li.divider
                li.nav-header Administration
                li
                  a(href='http://localhost:1337/settings')
                    i.icon-wrench
                    span Settings

          .span10
